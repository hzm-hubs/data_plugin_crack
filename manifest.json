{
	"manifest_version": 3,
	"name": "数聚通分析软件_Ding",
	"version": "1.5.4",
	"description": "智能化抓取电商与自媒体数据，实时导入钉钉多维表格，驱动精准分析与数据驱动决策，提升业务洞察力与运营效率",
	"author": "superman",
	"icons": {
		"256": "images/256.png"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"scripting",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"notifications"
	],
	"host_permissions": [
		"https://s.taobao.com/search*",
		"https://item.taobao.com/item*",
		"https://detail.tmall.com/item*",
		"https://www.douyin.com/search*",
		"https://www.douyin.com/*/search*",
		"https://www.douyin.com/user/*",
		"https://www.douyin.com/video/*",
		"https://www.douyin.com/*modal_id=*",
		"https://www.xiaohongshu.com/search*",
		"https://www.xiaohongshu.com/explore*",
		"https://www.xiaohongshu.com/user/profile/*",
		"https://one.alimama.com/index.html?*",
		"https://sycm.taobao.com/mc/free/search*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://s.taobao.com/search*",
				"https://item.taobao.com/item*",
				"https://detail.tmall.com/item*"
			],
			"js": [
				"common/domainHelper.js",
				"common/utils.js",
				"taobao/skuScraper.js",
				"taobao/search.js",
				"taobao/detail.js",
				"taobao/comment.js",
				"taobao/question.js",
				"content.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": ["https://www.douyin.com/*"],
			"js": [
				"common/domainHelper.js",
				"common/utils.js",
				"douyin/search.js",
				"douyin/user.js",
				"douyin/video.js",
				"douyin/videoSniffing.js",
				"content.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.xiaohongshu.com/search*",
				"https://www.xiaohongshu.com/explore*",
				"https://www.xiaohongshu.com/user/profile/*"
			],
			"js": [
				"common/domainHelper.js",
				"common/utils.js",
				"xiaohongshu/search.js",
				"xiaohongshu/user.js",
				"xiaohongshu/note.js",
				"content.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": ["https://sycm.taobao.com/mc/free/search_rank*"],
			"js": [
				"common/domainHelper.js",
				"common/utils.js",
				"sycm/rank.js",
				"content.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": ["https://sycm.taobao.com/mc/free/search_analysis*"],
			"js": [
				"common/domainHelper.js",
				"common/utils.js",
				"sycm/analysis.js",
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup/index.html"
	},
	"background": {
		"service_worker": "background.js"
	}
}
