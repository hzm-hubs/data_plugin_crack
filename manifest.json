{
	"manifest_version": 3,
	"name": "数据抓取插件",
	"version": "1.1",
	"description": "智能化抓取电商与自媒体数据，实时导入飞书多维表格，驱动精准分析与数据驱动决策，提升业务洞察力与运营效率",
	"author": "superman",
	"permissions": ["tabs", "activeTab", "scripting", "storage"],
	"host_permissions": [
		"https://s.taobao.com/search*",
		"https://item.taobao.com/item*",
		"https://detail.tmall.com/item*",
		"https://www.douyin.com/search*",
		"https://www.douyin.com/*/search*",
		"https://www.douyin.com/user/*",
		"https://www.douyin.com/video/*",
		"https://www.douyin.com/*modal_id=*",
		"https://www.xiaohongshu.com/search*",
		"https://www.xiaohongshu.com/explore*",
		"https://www.xiaohongshu.com/user/profile/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://s.taobao.com/search*",
				"https://item.taobao.com/item*",
				"https://detail.tmall.com/item*"
			],
			"js": [
				"common/domainHelper.js",
				"common/utils.js",
				"taobao/search.js",
				"taobao/detail.js",
				"taobao/skuScraper.js",
				"taobao/comment.js",
				"content.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.douyin.com/search*",
				"https://www.douyin.com/*/search*",
				"https://www.douyin.com/user/*",
				"https://www.douyin.com/video/*",
				"https://www.douyin.com/*modal_id=*"
			],
			"js": [
				"common/domainHelper.js",
				"common/utils.js",
				"douyin/search.js",
				"douyin/user.js",
				"douyin/video.js",
				"douyin/videoSniffing.js",
				"content.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.xiaohongshu.com/search*",
				"https://www.xiaohongshu.com/explore*",
				"https://www.xiaohongshu.com/user/profile/*"
			],
			"js": [
				"common/domainHelper.js",
				"common/utils.js",
				"xiaohongshu/search.js",
				"xiaohongshu/user.js",
				"xiaohongshu/note.js",
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup/index.html"
	},
	"background": {
		"service_worker": "background.js"
	}
}
